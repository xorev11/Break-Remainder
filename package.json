{
  "name": "break-reminder",
  "displayName": "Break Reminder",
  "description": "Напоминания о перерывах во время работы в VS Code",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
    "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w"
  },
  "dependencies": {
    "node-notifier": "^10.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.16.0",
    "@types/node-notifier": "^8.0.0",
    "@types/vscode": "^1.60.0",
    "@vscode/vsce": "^3.7.0",
    "typescript": "^4.9.5"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Break Reminder",
      "properties": {
        "breakReminder.defaultWorkMinutes": {
          "type": "number",
          "default": 30,
          "minimum": 0.1,
          "description": "Рабочее время по умолчанию (в минутах). 0.1666 = 10 секунд."
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/break-reminder.git"
  }


}
